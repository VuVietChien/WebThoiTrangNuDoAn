@model PagedList.PagedList<WebBanHangOnline.Models.EF.News>
@using PagedList.Mvc
@using PagedList
@{
    ViewBag.Title = "Danh sách tin tức";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home/index" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/news/index" class="nav-link">@ViewBag.Title</a>
        </li>
    </ul>
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản Lý Tin Tức</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">@ViewBag.Title</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">@ViewBag.Title</h3>

            <div class="card-tools">
                <a href="/admin/news/add" class="btn btn-primary">Thêm Mới</a>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-12">
                    @using (Html.BeginForm("index", "news", FormMethod.Get))
                    {
                        <div class="form-group">
                            <div class="input-group input-group-sm">

                                @Html.TextBox("Searchtext", "", new { @class = "form-control form-control-lg", @type = "search", @placeholder = "Nhập thông tin tìm kiếm...." })
                                @*<input type="search" class="form-control form-control-lg" name="searchText" placeholder="Nhập thông tin tìm kiếm...." value="">*@
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-lg btn-default">
                                        <i class="fa fa-search"></i>Tìm Kiếm
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <table class="table table-bordered">
                <thead>
                <th class="text-center"><input type="checkbox" id="SelectAll" /></th>
                <th class="text-center">STT</th>
                <th class="text-center">Hình Ảnh</th>
                <th class="text-center">Tiêu Đề</th>
                <th class="text-center">Ngày Tạo</th>
                <th class="text-center">Trạng Thái</th>
                <th class="text-center">Hành Động</th>
                </thead>

                <tbody>
                    @if (Model != null && Model.Any())
                    {

                        var i = ((ViewBag.page - 1) * ViewBag.pageSize) + 1;
                        foreach (var item in Model)
                        {
                            var strCkeck = @item.IsActive ? "<i class='fa fa-check text-success'></i>" : "<i class='fa fa-times text-danger'></i>";

                            <tr id="trow_@item.Id">
                                <td class="text-center"><input type="checkbox" class="cbkItem" value="@item.Id" /></td>

                                <td class="text-center">@i</td>
                                <td class="text-center"><img src="@item.Image" alt="chưa có ảnh" style="width : 50px" /></td>
                                <td class="text-center">@item.Title</td>
                                <td>@item.CreatedDate.ToString("dd/MM/yyyy")</td>
                                <td class="text-center">
                                    <a class="btnActive" href="#" data-check="@item.Id">@Html.Raw(strCkeck)</a>
                                </td>

                                <td class="text-center">
                                    <a href="/admin/news/edit/@item.Id" class="btn btn-warning">Sửa</a>
                                    <a href="#" data-id="@item.Id" class="btn btn-danger btnDelete">Xóa</a>
                                </td>
                            </tr>
                            i++;
                        }

                    }
                    else
                    {
                        <tr>
                            <td colspan="4">Không có bản ghi nào ở đây cả !</td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="row">
                <div class="col-4"></div>
                <div class="col-4"></div>
                <div class="col-4">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                </div>
            </div>

        </div>
        <!-- /.card-body -->
        <div class="card-footer">
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>


@section scripts{
    <script>

        $(document).ready(function () {
            //delete All News
            $('body').on('click', '#BtnDeleteAll', function (e) {
                e.preventDefault();
                var str = "";
                var checkbox = $(this).parents('.card').find('tr td input:checkbox');
                var i = 0;
                checkbox.each(function () {
                    if (this.checked) {
                        checkbox.attr('selected', 'checked');

                        var _id = $(this).val();
                        if (i === 0) {
                            str += _id;

                        }
                        else {
                            str += "," + _id;
                        }
                        i++;
                    }
                    else {
                        checkbox.attr('selected', '');
                    }

                })
                debugger;
                if (str.length > 0) {
                    var conf = confirm('Bạn có muốn xóa các bản ghi đẫ chọn hay không ?');
                    if (conf === true) {
                        $.ajax({
                            url: '/admin/news/deleteAll',
                            type: 'POST',
                            data: { ids: str },
                            success: function (rs) {
                                if (rs.success) {
                                    location.reload();
                                }
                            }
                        });
                    }
                }
            });

            //select all record
            $('body').on('change', '#SelectAll', function () {
                var checkStatus = this.checked;
                var checkbox = $(this).parents('.card-body').find('tr td input:checkbox');
                checkbox.each(function () {
                    this.checked = checkStatus;
                    if (this.checked) {
                        checkbox.attr('selected', 'checked');
                    }
                    else {
                        checkbox.attr('selected', '');
                    }
                })
            })


            //delete a record
            $('body').on('click', '.btnDelete', function () {
                var id = $(this).data('id');
                var conf = confirm("Bạn có muốn xóa bản ghi này không ?");
                if (conf === true) {
                    $.ajax({
                        url: '/admin/news/delete',
                        type: 'POST',
                        data: { id: id },
                        success: function (rs) {
                            if (rs.success == true) {
                                $('#trow_' + id).remove();
                            }
                        }
                    })
                }
            });


            //display active icon

            $('body').on('click', '.btnActive', function (e) {
                e.preventDefault();
                var btn = $(this);
                var id = $(this).data('check');

                $.ajax({
                    url: '/admin/news/IsActive',
                    type: 'POST',
                    data: { id: id },
                    success: function (rs) {
                        debugger;
                        if (rs.success) {
                            if (rs.isActive) {
                                btn.html("<i class='fa fa-check text-success'></i>");
                            }
                            else {

                                btn.html("<i class='fa fa-times text-danger'></i>");
                            }
                        }
                    }
                })
            });
        })

    </script>
}

