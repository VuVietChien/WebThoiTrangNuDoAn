@model WebBanHangOnline.Models.EF.News

@{
    ViewBag.Title = "Thêm mới tin tức";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home/index" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/news/index" class="nav-link">Tin Tức</a>
        </li>

        <li class="nav-item d-none d-sm-inline-block">  
            <a href="#" class="nav-link">Thêm Mới</a>
        </li>
    </ul>
}

<!-- Main content -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Thêm Mới Tin Tức</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item active">Tin Tức</li>
                    <li class="breadcrumb-item active"> Thêm Mới</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin thêm mới Tin Tức</h3>
        </div>

        <div class="bs-stepper-content">
            <!-- your steps content here -->
            @using (Html.BeginForm("Add", "News", FormMethod.Post, new { }))
            {
                @Html.AntiForgeryToken();
                @Html.ValidationSummary(true)

            <div id="logins-part" class="content" role="tabpanel" aria-labelledby="logins-part-trigger">
                <div class="form-group">
                    <label for="exampleInputEmail1">Tiêu đề tin</label>
                    @Html.TextBoxFor(m => m.Title, new { @class = "form-control", @placeholder = "Nhập tiêu đề tin" })
                    @Html.ValidationMessageFor(m => m.Title, null, new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Mô Tả</label>
                    @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label for="exampleInputFile">Ảnh đại diện</label>
                    <div class="input-group">
                        <div class="custom-file">
                            @Html.TextBoxFor(m => m.Image, new { @id = "txtImage", @class = "form-control" })
                        </div>
                        <div class="input-group-append">
                            <input type="button" value="Tải Ảnh" onclick="BrowseServer('txtImage');" />
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label for="exampleInputEmail1">Chi Tiết</label>
                    @Html.TextAreaFor(m => m.Detail, new { @class = "form-control", @id = "txtDetail" })
                </div>



                <div class="form-group">
                    <label for="exampleInputPassword1">Tiêu đề SEO</label>
                    @Html.TextAreaFor(m => m.SeoTitle, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label for="exampleInputPassword1">Nội dung chi tiết SEO</label>
                    @Html.TextAreaFor(m => m.SeoDescription, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Từ khóa SEO</label>
                    @Html.TextAreaFor(m => m.SeoKeywords, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Hiển Thị</label>
                    @Html.CheckBoxFor(m => m.IsActive, new { @checked = "@checked" })
                </div>




                <div class="form-group">
                    <a class="btn btn-danger" href="/admin/news/index">Quay Lại</a>
                    <button type="submit" class="btn btn-primary">Lưu</button>

                </div>

            </div>
            }

        </div>

    </div>
    <!-- /.card -->

</section>

@section scripts{
    <script>
        $(document).ready(function () {
            CKEDITOR.replace('txtDetail', {
                customConfig: '/content/ckeditor/config.js',
                extraAllowedContent: 'span',
            });
        });

        function BrowseServer(field) {
            var finder = new CKFinder();
            finder.selectActionFunction = function (fileUrl) {
                document.getElementById(field).value = fileUrl;
            };
            finder.popup();
        }
    </script>
    }